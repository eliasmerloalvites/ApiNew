<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocelular"
    tools:context=".ValidandoNumero">
    <LinearLayout
        android:background="@drawable/formato_cuadrolinearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.4">
        <ImageView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:background="@drawable/logocelular"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Ingresa tu Nº de celular"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextSecu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Lo usaremos para validar que el numero sea valido y usted sea el propietario de este celular"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textColor="@color/colorTextSecu"/>
        </LinearLayout>
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.4">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="NUMERO DE CELULAR"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextSecu"/>

        <RelativeLayout
            android:id="@+id/phoneAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/formato_cajalinearlayout">
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_defaultNameCode="PE"
                        app:ccp_contentColor="@color/colorTextSecu"
                        app:ccpDialog_backgroundColor="@color/colorPrimaryDark"
                        app:ccpDialog_fastScroller_bubbleColor="@color/colorPrimary"
                        app:ccpDialog_textColor="@color/colorAccent"
                        app:ccpDialog_fastScroller_handleColor="@color/colorAccent"
                        app:ccp_textSize="14sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/formato_cajalinearlayout">
                    <EditText
                        android:id="@+id/numerotelefono"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:hint="Ej. 999999999"
                        android:background="@null"
                        android:textSize="14sp"
                        android:inputType="phone"
                        android:singleLine="false"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
            <Button
                android:id="@+id/idrecibircodigo"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/formato_bottonplomo"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:text="Recibir Código"/>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>