<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:id="@+id/idgeneral"
    tools:context=".Promocion">
    <RelativeLayout
        android:background="#00000000"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/idcontenido"
            android:layout_marginTop="25dp"
            android:background="@drawable/formato_cajalinearlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/idViewPagerPromo"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp" />
                <LinearLayout
                    android:background="#00000000"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/idLinearLayourProv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/formato_cajalinearlayout_proveedor"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="#00000000"
                            android:drawableLeft="@drawable/ic_info"
                            android:drawableTint="@color/edtColorWhite"/>
                        <TextView
                            android:id="@+id/idProveedor"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="#00000000"
                            android:text="Proveedor"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#00000000"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/idLinearLayourConteo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/formato_cajalinearlayout_conteo"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/idInicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edtColorBlack"
                            android:background="#00000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edtColorBlack"
                            android:background="#00000000"
                            android:text="/"/>
                        <TextView
                            android:id="@+id/idFin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edtColorBlack"
                            android:background="#00000000"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="#00000000"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/idLinearLayourProv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/formato_cajalinearlayout_disponibilidad"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="#00000000"
                            android:drawableLeft="@drawable/ic_vista"
                            android:drawableTint="@color/edtAmarillo"/>
                        <TextView
                            android:id="@+id/idProveedor1"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edtAmarillo"
                            android:background="#00000000"
                            android:text="Disponible"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecu"
                    android:textStyle="bold"
                    android:background="#00000000"/>
                <TextView
                    android:id="@+id/idDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecu"
                    android:background="#00000000"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reciclerdetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="#FCFCFC"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#00000000"
                    android:layout_weight="0.2"/>
                <LinearLayout
                    android:background="@color/colorTextSecu"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#FCFCFC"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingRight="10dp"
                    android:layout_weight="0.2"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Costo Total"
                    android:textColor="#24D436"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_weight="0.8"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#24D436"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                        android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="#00000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/idCantidadMenos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="#00000000"
                            android:drawableLeft="@drawable/ic_menos_circulo"
                            android:drawableTint="@color/edtAmarillo"/>
                        <LinearLayout
                            android:background="#00000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:background="@drawable/formato_cajalinearlayout"
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:orientation="vertical">
                            <EditText
                            android:id="@+id/idCantidadPromocion"
                            android:textAlignment="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                                android:inputType="number"
                                android:digits="1234567890"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:text="1"
                            android:background="#00000000"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/idCantidadMas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:drawableLeft="@drawable/ic_mas_circulo"
                            android:drawableTint="@color/edtAmarillo"/>
                    </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:text="Cantidad"
                            android:textColor="#000"
                            android:background="#00000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#00000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/idHorarioMenos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:background="#00000000"
                                android:drawableLeft="@drawable/ic_menos_circulo"
                                android:drawableTint="@color/edtAmarillo"/>
                            <LinearLayout
                                android:background="#00000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:background="@drawable/formato_cajalinearlayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="23dp"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/idTiempoPromocion"
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:inputType="number"
                                        android:digits="1234567890"
                                        android:textSize="15dp"
                                        android:textColor="#000"
                                        android:background="#00000000"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/idHorarioMas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:background="#00000000"
                                android:drawableLeft="@drawable/ic_mas_circulo"
                                android:drawableTint="@color/edtAmarillo"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="#00000000"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:text="Tiempo ("
                            android:textColor="#000"
                            android:background="#00000000"/>
                            <TextView
                                android:id="@+id/idFormatoPromocion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="15dp"
                                android:text="Hora"
                                android:textColor="#000"
                                android:background="#00000000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="15dp"
                                android:text=")"
                                android:textColor="#000"
                                android:background="#00000000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/idsiguiente"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/formato_botton_amarillo"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:text="Solicitar"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@drawable/formato_cajalinearlayout_circulo_blanco">
            <TextView
                android:id="@+id/idCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_cerrar"
                android:drawableTint="@color/colorSecundarioDark"/>
        </LinearLayout>
        <RelativeLayout
            android:background="#00000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/formato_cajalinearlayout_circulo">
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="28dp"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:background="@drawable/formato_cajalinearlayout_circulo_blanco">
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:background="#00000000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:lottie_rawRes="@raw/estrella"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
        </RelativeLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>