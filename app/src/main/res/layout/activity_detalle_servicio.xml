<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicio"
    tools:context=".DetalleServicio">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:id="@+id/lilaBuscadorCla"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/icoAtrasCla"
                    android:layout_width="40dp"
                    android:layout_height="120dp"
                    android:text=""
                    android:drawableEnd="@drawable/ic_atras"
                    android:drawableTint="#FFF" />
                <EditText
                    android:id="@+id/edtBuscadorCla"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@null" />
                <TextView
                    android:id="@+id/icoBuscadorCla"
                    android:layout_width="40dp"
                    android:layout_height="120dp"
                    android:text=""
                    android:drawableEnd="@drawable/ic_search"
                    android:drawableTint="#FFF" />
            </LinearLayout>
            <ImageView
                android:id="@+id/modoListaClase"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_menu_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/formato_cuadrolinearlayout">
            <ImageView
                android:id="@+id/imgServicio"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/celular"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_starSize="12dp"
                    app:srb_numberOfStars="5"
                    app:srb_rating="3"
                    app:srb_stepSize="0.5"
                    app:srb_starBorderWidth="1"
                    app:srb_starCornerRadius="0"
                    app:srb_borderColor="@color/edtAmarillo"
                    app:srb_fillColor="@color/edtAmarillo"
                    app:srb_isIndicator="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/like_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_favorito" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/descripcionservicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPCION"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>